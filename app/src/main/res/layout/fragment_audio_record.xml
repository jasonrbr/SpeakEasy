<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mhacks.speakeasy.AudioRecordFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:padding="16dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/record_question"
            android:paddingBottom="8dp"
            android:text="@string/record_question"
            android:layout_centerHorizontal="true"
            android:textSize="35sp"
            android:textColor="@color/primary_text"/>

        <at.markushi.ui.CircleButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/record_question"
            android:src="@drawable/ic_record"
            android:layout_centerInParent="true"
            android:id="@+id/record_button"
            app:cb_color="#659D32"
            app:cb_pressedRingWidth="8dip" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/record_description"
            android:layout_below="@id/record_button"
            android:layout_centerHorizontal="true"
            android:paddingTop="15dp"
            android:id="@+id/rec_desc"
            android:textColor="@color/primary_text"
            android:textSize="18sp"/>
    </RelativeLayout>
    </RelativeLayout>


</FrameLayout>
